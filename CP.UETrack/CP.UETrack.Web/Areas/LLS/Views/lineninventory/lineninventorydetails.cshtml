
@{
    ViewBag.Title = "lineninventorydetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
    <input id="antiForgeryToken" type="hidden" />
    <input type="hidden" id="primaryID" name="primaryID" value="@ViewBag.CurrentID" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
    <input type="hidden" id="Timestamp" name="Timestamp" value="null" />
    <input type="hidden" id="hdnStatus" name="hdnStatus" />
    <input type="hidden" id="hdnAttachId" name="HdnAttachId" />

    <!-- Content Header Starts -->
    <div class="content_header">
        <ol class="breadcrumb">
            <li><a href="/home/dashboard"><i class="fa fa-home"></i></a></li>
            <li>LLS</li>
            <li>Transaction</li>
            <li class="active">Linen Inventory</a></li>
            <a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
                <i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
                <span class="badge" id="helpdescriptionid"></span>
            </a>
        </ol>
        <div>
            <h4 class="pull-left">Linen Inventory </h4>
            <div style="font-weight:bold; color:black; margin-bottom:15px; margin-top: 17px;" id="divTandCStatus" class="TandCStatusName pull-right"></div>
            <div style="clear:both;display:table;"></div>
        </div>
    </div>
    <!-- Content Header Ends -->
    <!-- Contents goes here -->
    <div class="standard-tabs" id="tabs">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#divINV" aria-controls="home" role="tab" data-toggle="tab">Linen Inventory</a></li>
        </ul>
    </div>
    <div>
        <!-- Tab panes -->
        <div class="tab-content">
            <!-- 1st Tab -->
            <div role="tabpanel" class="tab-pane active" id="divINV">
                <form class="form-horizontal" id="FrmINV" novalidate>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label"> Store Type<span class="red">*</span></label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="txtStoreType" name="StoreType" autocomplete="off" maxlength="100">
                                        <option value="null">Select</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label"> Document No.</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtDocumentNo" name="DocumentNo" autocomplete="off" maxlength="100" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">Date<span class="red">*</span> </label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" id="txtDate" name="Date" class="form-control datetime" tabindex="0">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="UserAreaIdName">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">User Area Code<span class="red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text"  class="form-control" id="txtUserAreaCode" placeholder="Please Select" name="UserAreaCode" maxlength="25" tabindex="2" />
                                    <input type="hidden"  id="hdnUserAreaId" />
                                    <div class="col-sm-12" id="divUserAreaFetch">
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">User Area Name</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" id="txtUserAreaName" name="TotalPcs" class="form-control" tabindex="0" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">Verified By <span class="red">*</span></label>
                                <div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" placeholder="Please Select" id="txtHospitalRepresentative" name="HospitalRepresentative" maxlength="25" tabindex="2" />
                                        <input type="hidden" required id="hdnHospitalRepresentativeId" />
                                        <div class="col-sm-12" id="divHospitalRepresentativeFetch">
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">Total Pcs</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" id="txtTotalPcs" name="TotalPcs" class="form-control" pattern="^[0-9]*$" tabindex="0"disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">Total In Use</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtTotalatCleanLinenStore" pattern="^[0-9]*$" name="TotalatCleanLinenStore" autocomplete="off" maxlength="100" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-6 control-label">Total Shelf</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtTotalSoiled" name="TotalSoiled" pattern="^[0-9]*$" autocomplete="off" maxlength="100" disabled>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-3 control-label"> Remarks </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="txtRemarks" name="Remarks" autocomplete="off" maxlength="100"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div ng-view="" class="row" id="divUserAreaDept" style="display:none">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table id="ppmchecklistTable" class="table table-fixedheader table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                                    <thead class="tableHeading noScrollGrid">
                                        <tr>
                                            <th width="5%" class="text-center">
                                                <span style="text-align: center;" class="glyphicon glyphicon-remove" title="Remove"></span>
                                                <input type="checkbox" id="chkContactDeleteAll" />
                                            </th>
                                            <th style="text-align: center;" width="20%" id="">Location Code <span class="red">*</span></th>
                                            <th style="text-align: center;" width="20%">Linen Code</th>
                                            <th style="text-align: center;" width="20%">Linen Description</th>
                                            <th style="text-align: center;" width="10%">In Use</th>
                                            <th style="text-align: center;" width="10%">Shelf </th>
                                            <th style="text-align: center;" width="15%">Total Pcs</th>

                                        </tr>
                                    </thead>
                                    <tbody id="ContactGrid">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row mt20" id="divUserAreaDeptAddNew">
                        <div class="col-sm-3 ">
                            <div class="form-group">
                                <div class="col-sm-3">
                                    <div>
                                        <a href="#" id="contactBtn" class="btn btn-primary">+</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div ng-view="" class="row" id="divCleanCenterLinenStore" style="display:none">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table id="LinenINVProviders" class="table table-fixedheader table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                                    <thead class="tableHeading ">
                                        <tr>
                                            <th width="5%" class="text-center">
                                                <span style="text-align: center;" class="glyphicon glyphicon-remove" title="Remove"></span>
                                               <input type="checkbox" id="chkContactDeleteAll2" />
                                            </th>
                                            <th style="text-align: center;" width="20%" id="">Linen Code <span class="red">*</span></th>
                                            <th style="text-align: center;" width="25%">Linen Description</th>
                                            <th style="text-align: center;" width="15%" pattern="^[0-9]*$" >In Use</th>
                                            <th style="text-align: center;" width="15%" pattern="^[0-9]*$" >Shelf </th>
                                            <th style="text-align: center;" width="20%" pattern="^[0-9]*$" >Total Pcs</th>
                                            @*<th style="text-align: center;" width="15%" pattern="^[0-9]*$" >User Dept/Area Total Pcs(B)</th>
                                            <th style="text-align: center;" width="10%" pattern="^[0-9]*$" >Total Pcs(A+B)</th>
                                            <th style="text-align: center;" width="10%" pattern="^[0-9]*$" >CCLS Store Balance</th>
                                            <th style="text-align: center;" width="10%" pattern="^[0-9]*$" >Variance</th>*@

                                        </tr>
                                    </thead>
                                    <tbody id="contact">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row mt20" id="divLinenStoreAddNew">
                        <div class="col-sm-3 ">
                            <div class="form-group">
                                <div class="col-sm-3">
                                    <div>
                                        <a href="#" id="btntwo" class="btn btn-primary">+</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="errorMsg" class="errormsgcenter" style="color:red;visibility:hidden;text-align:center;" aria-hidden="true">
                        <!-- ngIf: RescheduleErrorList.length > 0 -->
                    </div>
                 
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="button" class="btn btn-primary btnSave"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
                            <button type="button" class="btn btn-primary btnSaveAddNew " value="1"><i class="fa fa-plus" aria-hidden="true"></i>Save & Add New </button>
                            <button type="button" class="btn btn-primary btnDelete "><i class="fa fa fa-trash" aria-hidden="true"></i>Delete</button>
                            <button type="button" name="btnCancel" class="btn btn-grey btnCancel"><i class="fa fa-repeat"></i> Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Html.Partial("~/Areas/LLS/Views/lineninventory/lineninventoryList.cshtml")
    <div class="modal fade" data-backdrop="static" id="divSearchPopup" role="dialog">

    </div>
</div>
@section scripts{
    <script src="~/Scripts/ng/Controllers/LLS/lineninventory.js"></script>
}
