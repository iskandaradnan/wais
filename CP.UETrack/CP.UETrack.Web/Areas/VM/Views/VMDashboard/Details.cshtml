
@{
    ViewBag.Title = "VM Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }

    <input id="antiForgeryToken" type="hidden" />
    <input type="hidden" id="primaryID" name="primaryID" value="@ViewBag.Id" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
    <input type="hidden" id="Timestamp" name="Timestamp" value="null" />

    <div class="content_header">
        <ol class="breadcrumb">
            <li>
                <a href="Dashboard.html"><i class="fa fa-home"></i></a>
            </li>
            <li><a href="#">VM</a></li>
            <li class="active"><a href="#">Dashboard</a></li>
            <!--<li class="active">General</li>-->
            <a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
                <i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
                <span class="badge" id="helpdescriptionid"></span>
            </a>
        </ol>
        <h4>VM Dashboard</h4>
    </div>
    <div class="content_body">
        <form class="form-horizontal" autocomplete="off">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Service</label>
                        <div class="col-sm-6">
                            <select class="form-control" id="VMDashService" disabled autocomplete="off"></select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Year & Month<span class="red"> *</span></label>
                        <div class="col-sm-3">
                            <select class="form-control" id="VMDashYear"></select>
                        </div>                    
                        <div class="col-sm-3">
                            <select class="form-control" id="VMDashMonth"></select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <hr style="margin: 2em 0;">
                </div>
                
            </div>
            <h5>Variation Status</h5>
            <div class="row">
                <div class="col-sm-6">
                    <div class="table-responsive">
                        <table id="VMDashboarddataTable" class="table table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                            <thead class="tableHeading">
                                <tr>
                                    <th style="text-align: center;" width="60%">Status</th>
                                    <th style="text-align: center;" width="40%">Count</th>                           

                                </tr>
                            </thead>
                            <tbody id="VMDashboardTbl">

                                @*Content of HTML Body Element*@

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<script src="~/Scripts/ng/Controllers/VM/VMDashboard.js"></script>

