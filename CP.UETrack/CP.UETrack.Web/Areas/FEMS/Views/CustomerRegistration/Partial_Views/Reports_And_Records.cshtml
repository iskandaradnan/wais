        <div class="row">
            <div class="col-sm-12">
                <hr style="margin: 2em 0;">
            </div>
            <div class="col-sm-12" id="divReportsAndRecordsTable">
                <div class="table-responsive">
                    <table id="tblReportsAndRecords" class="table table-fixedheader table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                        <thead class="tableHeading">
                            <tr>
                                <th width="3%" class="text-center">
