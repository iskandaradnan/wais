
@{
    ViewBag.Title = "KPI Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }

    <input id="antiForgeryToken" type="hidden" />
    <input type="hidden" id="primaryID" name="primaryID" value="@ViewBag.Id" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
    <input type="hidden" id="Timestamp" name="Timestamp" value="null" />

    <div class="content_header">
        <ol class="breadcrumb">
            <li>
                <a href="Dashboard.html"><i class="fa fa-home"></i></a>
            </li>
            <li><a href="#">KPI</a></li>
            <li class="active">@*<a href="#">*@Dashboard</a></li>
            <!--<li class="active">General</li>-->
            <a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
                <i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
                <span class="badge" id="helpdescriptionid"></span>
            </a>
        </ol>
        <h4>KPI Dashboard</h4>
    </div>
    <div class="content_body">
        <form class="form-horizontal">
            <div class="row">
                <div class="content-area">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>Deduction Value Trend - Current Year</h4>
                            <div id="KPI_Dashboard_Value_Chart" style="cursor:pointer !important"></div>
                        </div>
                        <div class="col-sm-6">
                            <h4>Deduction Percentage Trend - Current Year</h4>
                            <div id="KPI_Dashboard_Year_Chart" style="cursor:pointer !important"></div>
                        </div>

                    </div>
                </div>

                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <hr style="margin: 2em 0;">
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Year<span class="red"></span></label>
                            <div class="col-sm-6">
                                <select class="form-control" id="KPIDashYear"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Month</label>
                            <div class="col-sm-6">
                                <select class="form-control" id="KPIDashMonth"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="KPIDashboarddataTable" class="table table-fixedheader table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                                <thead class="tableHeading">
                                    <tr>
                                        <th style="text-align: center;" width="20%">Service</th>
                                        <th style="text-align: center;" width="30%">Monthly Service Fee(RM)</th>
                                        <th style="text-align: center;" width="25%">Deduction Value</th>
                                        <th style="text-align: center;" width="25%">Penalty</th>

                                    </tr>

                                </thead>
                                <tbody id="KPIDashboardTbl">


                                    @*Content of HTML Body Element*@


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>

<script src="~/Scripts/ng/Controllers/Dashboard/CommonChart.js"></script>
<script src="~/Scripts/ng/Controllers/KPI/KPIDashboard.js"></script>