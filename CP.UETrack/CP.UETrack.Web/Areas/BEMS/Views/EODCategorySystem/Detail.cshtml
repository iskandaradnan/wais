
@{
    ViewBag.Title = "EOD Category / System Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }

    <input id="antiForgeryToken" type="hidden" />
    <input type="hidden" id="primaryID" name="primaryID" value="@ViewBag.CurrentID" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
    <input type="hidden" id="Timestamp" name="Timestamp" value="null" />

    <!-- Content Header Starts -->
    <div class="content_header">
        <ol class="breadcrumb">
            <li>
                <a href="/home/dashboard"><i class="fa fa-home"></i></a>
            </li>
            <li>EOD</li>
            <li class="active">EOD Category / System Master</li>
            <a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
                <i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
                <span class="badge" id="helpdescriptionid"></span>
            </a>
        </ol>
        <h4>@ViewBag.ActionType EOD Category / System Master</h4>
    </div>
    <div class="standard-tabs" id="tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-1" data-toggle="tab">Category / System Master</a></li>
        </ul>
    </div>
    <!-- Content Header Ends -->
    <!-- Contents goes here -->
    <div class="content_body">
        <div class="content_body">
            <form class="form-horizontal" id="categoryformid">

                <div class="form-horizontal">
                    <div class="form-group row">
                        <label for="inputservice" class="col-sm-2 col-form-label">Service</label>
                        <div class="col-sm-4">
                            <select id="ServiceId" class="form-control" disabled></select>
                        </div>
                        <label for="CategoryName" class="col-sm-2 col-form-label">Category / System Name<span class="red">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control validate" maxlength="150" id="CategorySystemName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="remarkstextarea" class="col-sm-2 col-form-label">Remarks</label>
                        <div class="col-sm-10 ">
                            <textarea class="form-control wt-resize" id="remarkstextarea" maxlength="500" style="min-width: 92%;height:70px"></textarea>
                        </div>
                    </div>

                    <div id="errorMsg" class="errormsgcenter" style="color:red;visibility:hidden;text-align:center;" aria-hidden="true">
                        <!-- ngIf: RescheduleErrorList.length > 0 -->
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12 text-right">
                            @if (ViewBag.ActionType == "ADD")
                            {
                                <button type="button" id="btnSave" class="btn btn-primary" title="Save" tabindex="5">Save</button>
                            }
                            @if (ViewBag.ActionType == "EDIT")
                            {
                                <button type="button" id="btnEdit" class="btn btn-primary" title="Save" tabindex="5">Save</button>
                            }
                            @if (ViewBag.ActionType == "ADD")
                            {
                                <button type="button" id="btnAddNew" name="btnAddNew" class="btn btn-primary" tabindex="6">Add New</button>
                            }
                            <button type="button" id="btnCancel" name="btnCancel" class="btn btn-grey" title="Cancel" tabindex="7">Back</button>
                        </div>
                    </div>
                </div>
            </form>



          
        </div>
    </div>
</div>

@if (ViewBag.ActionType == "VIEW")
{
    <script type="text/javascript">
        $("#categoryformid :input:not(:button)").prop("disabled", true);
    </script>
}
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/ng/controllers/BEMS/EODCategorySystem.js")"></script>
}
