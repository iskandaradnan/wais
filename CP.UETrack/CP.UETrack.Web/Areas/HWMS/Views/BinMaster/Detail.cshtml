
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
    <input type="hidden" id="primaryID" name="primaryID" value="0" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
	<div class="content_header">
		<ol class="breadcrumb">
			<li>
				<a href="/home/dashboard"><i class="fa fa-home"></i></a>
			</li>
			<li>HWMS</li>
			<li>Master</li>
			<li>Bin Master</li>
			<a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
				<i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
				<span class="badge" id="helpdescriptionid"></span>
			</a>
		</ol>
		<h4> </h4>
	</div>
    <div class="standard-tabs" id="tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#formppmplanner" data-toggle="tab">Bin Master</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="formppmplanner">
            <form id="formBinMaster" name="formBinMaster" class="form-horizontal">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Capacity Code<span style="color:red">*</span></label>
                            <div>
                                <div class="col-sm-6">
                                    <div id="capacity">
                                        <select required class="form-control" id="CCode">                                      
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Description<span style="color:red">*</span></label>
                            <div>
                                <div class="col-sm-6" id="desc">
                                    <input type="text" required class="form-control" id="txtDescription" autocomplete="off" name="Description" maxlength="25" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Waste Type<span style="color:red">*</span></label>
                            <div>
                                <div class="col-sm-6">
                                    <div id="wtype">
                                        <select required class="form-control" id="WType">                                  
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">No. of Bins</label>
                            <div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtNoofBins" autocomplete="off" name="NoofBins" maxlength="25" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />               
                <table id="tblBinDeails" class="table table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                    <thead class="tableHeading">
                        <tr>
                            <th width="3%" class="text-center">
                                <span style="text-align: center; " class="delete-rowW glyphicon glyphicon-remove" id="deleteBinNo"></span>
                            </th>
                            <th style="text-align: center;" width="10%">Bin. No<span style="color:red">*</span></th>
                            <th style="text-align: center;" width="10%">Manufacturer<span style="color:red">*</span></th>
                            <th style="text-align: center;" width="10%">Weight</th>
                            <th style="text-align: center;" width="10%">Operation Date<span style="color:red">*</span></th>
                            <th style="text-align: center;" width="10%">Status<span style="color:red">*</span></th>
                            <th style="text-align: center;" width="10%">Disposed Date</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyBinNo">
                        <tr>
                            <td style="text-align:center">
                                <input type="hidden" id="hdnBinNoId1" value="0" />
                                <input type="checkbox" id="isDelete1" name="isDelete">
                            </td>
                            <td id="binno">
                                <input type="text" required class="form-control clsBinNo" id="txtBinNo1" autocomplete="off" name="BinNo" maxlength="25" />

                                <input type="hidden" id="hdnBinNoId1" />
                                <div class="col-sm-12" id="divBinNo1">
                                </div>
                            </td>
                            <td id="manuf">
                                <input type="text" required class="form-control" id="txtManufacturer1" autocomplete="off" name="Manufacturer" maxlength="25" />
                            </td>
                            <td>
                                <input type="text" class="form-control clsWeight" id="txtWeight1" autocomplete="offWeight" name="Weight" maxlength="25" />
                            </td>
                            <td id="opdate">
                                <input type="text" required class="form-control datetime" id="txtOperationDate1" autocomplete="off" name="OperationDate" maxlength="25" />
                            </td>
                            <td id="stat">
                                <select type="text" required class="form-control statusvalue" id="txtStatus1" autocomplete="off" name="statusvalue" maxlength="25" ></select>
                            </td>
                            <td>
                                <input type="text" class="form-control datetime" id="txtDisposedDate1" autocomplete="off" name="DisposedDate" maxlength="25"  />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row mt20" id="AttachRowPlus">
                    <div class="col-sm-3 ">
                        <div class="form-group">
                            <div class="col-sm-3">
                                <div>
                                    <a class="btn btn-primary" id="addBins">+</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="errorMsg" class="errormsgcenter" style="color:red; visibility:hidden;" aria-hidden="true">
                </div>
                <div class="row mt30">
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                            <input type="button" id="btnSaveandAddNew" class="btn btn-primary" value="Save & AddNew" />
                            <input type="button" id="btnCancel" class="btn btn-primary" value="Reset" />
                            @*<button type="button" id="btnSave" class="btn btn-primary customButton" title="Save" tabindex="5"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
                    <button type="button" id="btnSaveandAddNew" class="btn btn-primary customButton" title="Save & AddNew"><i class="fa fa-plus" aria-hidden="true"></i>Save & Add New </button>
                    <button type="button" id="btnCancel" name="btnCancel" class="btn btn-grey customButton" title="Reset"><i class="fa fa-repeat" aria-hidden="true"></i>Reset</button>*@
                        </div>
                    </div>
                </div>
            </form>           
            <div>
                <label id="BinLabel" style="font-size:14px;font-weight:bolder"></label>
            </div>           
            <br/>                     
        </div>
    </div>
    @Html.Partial("~/Areas/HWMS/Views/BinMaster/List.cshtml")
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/ng/controllers/HWMS/BinMaster.js")"></script>
}