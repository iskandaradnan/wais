
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;
        }
    }
    <input type="hidden" id="primaryID" name="primaryID" value="@ViewBag.CurrentID" />
    <input type="hidden" id="ActionType" name="ActionType" value="@ViewBag.ActionType" />
    <div class="content_header">
        <ol class="breadcrumb">
            <li>
                <a href="/home/dashboard"><i class="fa fa-home"></i></a>
            </li>
            <li>HWMS</li>
            <li>Master</li>
            <li>Waste Type</li>
            <a id="HelpDescriptionLink" data-toggle="modal" title="" tabindex="0" data-target="#Description" aria-disabled="false">
                <i class="fa fa-question-circle" aria-hidden="true" style="float:right;margin-right:20px;"></i>
                <span class="badge" id="helpdescriptionid"></span>
            </a>
        </ol>
        <h4></h4>
    </div>
    <div class="standard-tabs" id="tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#formppmplanner" data-toggle="tab">Waste Type</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="formppmplanner">
            <form id="formWasteType" name="formWasteType" class="form-horizontal">
                <div class="row">
                    <input type="hidden" id="txtIdno" />
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Waste Category<span style="color:red">*</span></label>
                            <div>
                                <div class="col-sm-6" id="Category">
                                    <select required class="form-control" id="ddlWasteCategory" name="WasteCategory"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label">Waste Type<span style="color:red">*</span></label>
                            <div>
                                <div class="col-sm-6" id="Wastetype">
                                    <select required class="form-control" id="ddlWasteType" name="Wastetype"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="WasteTypeTable" class="table table-bordered" style="border: 1px solid rgb(222, 218, 218);">
                                <thead class="tableHeading">
                                    <tr>
                                        <th width="2%" class="text-center">
                                            <span style="text-align: center; " class="delete-row glyphicon glyphicon-remove" id="deleteWasteCode"></span><br />
                                        </th>
                                        <th style="text-align: center;" width="10%">Waste Code<span style="color:red">*</span></th>
                                        <th style="text-align: center;" width="20%">Waste Description<span style="color:red">*</span></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyWasteCode">
                                    <tr>
                                        <td style="text-align:center">
                                            <input type="hidden" id="hdnWasteCodeId1" value="0" />
                                            <input type="checkbox" name="isDelete" id="isDelete1">
                                        </td>
                                        <td id="code">
                                            <input type="text" required class="form-control" id="txtWasteCode1" autocomplete="off" name="Waste Code" maxlength="25" />
                                        </td>
                                        <td id="description">
                                            <input type="text" required class="form-control" id="txtWasteDescription1" autocomplete="off" name="Waste Description" maxlength="25" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row mt20" id="AttachRowPlus">
                                <div class="col-sm-3 ">
                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <div>
                                                <a class="btn btn-primary" id="addWasteCode">+</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="errorMsg" class="errormsgcenter" style="color:red; visibility:hidden;" aria-hidden="true">
                    <!-- ngIf: RescheduleErrorList.length > 0 -->
                </div>
                <div class="row mt30">
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                            <input type="button" id="btnSaveAddNew" class="btn btn-primary" value="Save & AddNew" />
                            <input type="button" id="btnCancel" class="btn btn-primary" value="Reset" />
                            @*<button type="button" id="btnSave" class="btn btn-primary customButton" title="Save" tabindex="5"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
                    <button type="button" id="btnSaveandAddNew" class="btn btn-primary customButton" title="Save & AddNew"><i class="fa fa-plus" aria-hidden="true"></i>Save & Add New </button>
                    <button type="button" id="btnCancel" name="btnCancel" class="btn btn-grey customButton" title="Reset"><i class="fa fa-repeat" aria-hidden="true"></i>Reset</button>*@
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @Html.Partial("~/Areas/HWMS/Views/WasteType/List.cshtml")
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/ng/controllers/HWMS/WasteType.js")"></script>
}


