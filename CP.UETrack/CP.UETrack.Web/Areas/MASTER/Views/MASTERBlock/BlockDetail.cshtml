        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#MasterdivBlock" aria-controls="home" role="tab" data-toggle="tab">Block</a></li>
            <li role="presentation"><a href="#divCommonHistory" id="History" aria-controls="profile" role="tab" data-toggle="tab">History</a></li>

        </ul>
        <!-- Content Header Ends -->
        <!-- Contents goes here -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="MasterdivBlock">
                <form name="formMasterBlock" id="formMasterBlock" class="form-horizontal" novalidate>
                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label for="blockFacility" class="col-sm-6 control-label">Facility</label>
                                <div class="col-sm-6">
                                    <div>
                                        <select id="MasterblockFacilityId" class="form-control" autofocus disabled>
                                            <option value="null" selected>Select</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label for="blockCode" class="col-sm-6 control-label">Block Code <span class="red">*</span></label>
                                <div class="col-sm-6">
                                    <div>
                                        <input type="text" class="form-control" pattern="^[a-zA-Z0-9\-\/]{3,25}$" maxlength="25" required id="MasterblockCode">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label for="blockBlkName" class="col-sm-6 control-label">Block Name <span class="red">*</span></label>
                                <div class="col-sm-6">
                                    <div>
                                        <input type="text" class="form-control" maxlength="25" pattern="^[a-zA-Z0-9\-\.\/\(\)\s]+$" required id="MasterblockName">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label for="blockShortName" class="col-sm-6 control-label">Short Name <span class="red">*</span></label>
                                <div class="col-sm-6">
                                    <div>
                                        <input type="text" class="form-control" maxlength="25" pattern="^[a-zA-Z0-9\-\.\/\(\)\s]+$" required id="MasterblockShortName">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label for="blockStatus" class="col-sm-6 control-label">Status </label>
                                <div class="col-sm-6">
                                    <select id="MasterSelStatus" class="form-control">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
