<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>UETrack™</title>

    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom Style-->    
    <link href="~/css/style.css" rel="stylesheet" />

    <!-- Custom Style-->
    <link href="~/fonts/font-awesome.css" rel="stylesheet" />

    <!-- Favicon-->
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body id="login" class="login">
    <div class="login_banner"></div>

    <div class="login_page">
        <div class="login_center">
            <div class="login_logo text-center">
                @*<a href="#"><img src="~/images/logo1.png" alt="logo" class="img-responsive"></a>*@
                <a href="#"><img src="~/images/logo2.png" alt="logo" class="img-responsive"></a>
            </div>

            <form onsubmit="return LoginAction();">
                <input type="hidden" name="" value="">
                <div class="form-group">
                    <label for="usr">Username</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input id="username" type="text" class="form-control" name="username" value="" placeholder="Username" maxlength="75">
                    </div>
                </div>
                <div class="form-group">
                    <label for="psd">Password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        <input id="password" type="password" class="form-control" name="password" placeholder="Password" maxlength="50">
                        <span class="input-group-addon password_toogle"><a href="#"><i class="fa fa-eye"></i></a></span>
                    </div>
                </div>
                <div class="form-group mt30">
                    <button id="btnlogin" type="submit" class="btn btn-block btn-lg btn-info">Login</button>
                </div>

                <div class="clearfix"></div>
                <div class="alert alert-danger alert-dismissible" role="alert" id="errMsg" style="display:none;">
                    <button type="button" class="close" id="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <span id="errMsgContent"></span>
                </div>
                <div>
                    <div class="login_btn text-center pull-left">
                        <a href="/um/forgotpassword" class="btn-link">Forgot Password ?</a>
                    </div>
                    <div class="login_btn text-center pull-right">
                        <a href="/MobileAPK/WAIS.apk" class="btn-link" download>
                            WAIS App
                            <i class="glyphicon glyphicon-download-alt" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div>
                    
                    <div class="login_btn text-center pull-right">
                        <a href="https://waisbismob.uemedgenta.com/chiller/download" class="btn-link" download>
                           BIS WAIS App
                            <i class="glyphicon glyphicon-download-alt" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div hidden>
                    <select id="selLanguage">
                        <option selected="selected" value="en-US">English</option>
                        <option value="ms-MY">Malay</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/js/bootstrap.js"></script>
    @*<script src="~/js/enscroll-0.6.0.min.js"></script>*@

    <script src="~/js/owl.carousel.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="@Url.Content("~/ViewModels/Account/Login.js")" type="text/javascript"></script>
</body>
</html>